{
    "require": {
        "slim/slim": "4.*",
        "slim/psr7": "^1.7",
        "php-di/php-di": "^7.0",
        "vlucas/phpdotenv": "^5.6",
        "firebase/php-jwt": "^6.11",
        "monolog/monolog": "^3.9",
        "phpmailer/phpmailer": "^6.10",
        "ramsey/uuid": "^4.9"
    },
    "autoload": {
        "psr-4": {
            "App\\" : "src/"
        }
    },
    "scripts": {
        "start": [
            "Composer\\Config::disableProcessTimeout",
            "php -S 0.0.0.0:80 -t public"
        ],
        "sql-r": "php sql/run.php sql/reset.sql",
        "sql-s": "php sql/run.php sql/seed.sql"
    }
}
